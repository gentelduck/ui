{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../../../../tsconfig.json",
    "compilerOptions": {
        "incremental": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "tsBuildInfoFile": "./.tsbuildinfo",
        "paths": {
            "@/*": [
                "../*"
            ]
        }
    },
    "include": [
        "../../ui/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}
