{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
