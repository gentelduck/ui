  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/react": "^19.0.10",
    "husky": "^9.1.7",
    "tsup": "^8.4.0"
  },
  "peerDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
